{% extends "YdleHubBundle::layout_user.html.twig" %}

{% block title %}{{ "title.config" | trans}}{% endblock %}

{% block content %}
<div class="row">
<div class="col-md-8">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">{{ "profile.title" | trans }}</h3>
        </div>
        <div class="box-body">
        {% block fos_user_content %}
        {% include "FOSUserBundle:Profile:show_content.html.twig" %}
        {% endblock fos_user_content %}
        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">{{ "profile.boxedit.title" | trans }}</h3>
        </div>
        <div class="box-body">
            <a href="{{ url('fos_user_profile_edit') }}"> <span class="fa fa-fw fa-user"></span>{{ "profile.edit.btn" | trans }}</a>
        </div>
    </div>
</div>
</div>
{% endblock content %}
