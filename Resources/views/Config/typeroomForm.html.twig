{% if entry is defined %}
{% set dataformsource = '/conf/typeroom/form/' ~ entry.id %}
{% else %}
{% set dataformsource = '' %}
{% endif %}

{{ form_start(form, { 'action': action, 'attr': {'class': 'ydle-form ajax-form', 'role': 'form', 'data-reload': 'roomtype-list', 'data-formsource': dataformsource, 'data-refresh': true, 'novalidate': 'novalidate', 'id': 'roomstype-form' } }) }}
{{ form_errors(form) }}
    <div class="box-body">
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="form-group">
            {{ form_label(form.description ) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>
    </div>
    <div class="box-footer">
        <button class="btn btn-primary" type="submit" name="submit" id="submit-conf-typeroom">Submit</button>
    </div>
{{ form_end(form) }}
