{% extends "YdleHubBundle::base.html.twig" %}

{% block stylesheets %}
<link href="{{ asset('bundles/ydlehub/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/ydlehub/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/ydlehub/css/ionicons.min.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('bundles/ydlehub/css/ydle.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block title 'Ydle - Dashboard' %}
{% block header %}
<div class="logo-wrapper">
    <a href="{{ path('homeYdle') }}" class="logo"> Ydle dashboard </a>
</div>
<!-- Header Navbar: style can be found in header.less -->
<nav class="navbar navbar-static-top" role="navigation">
    {% block top %}
    <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </a>
    <h3 class="ydle-version">Ydle 0.5.2</h3>
    {% block topnav %}
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ include('YdleHubBundle:Menu:topNav.html.twig') }}
        {% endif %}
    {% endblock %}
    {% endblock %}
    <!-- Sidebar toggle button-->
</nav>
{% endblock %}
  

{% block menu %}
<!-- Left side column. contains the logo and sidebar -->
<aside class="left-side sidebar-offcanvas">
<!-- sidebar: style can be found in sidebar.less -->
<section class="sidebar">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <!-- sidebar menu: : style can be found in sidebar.less -->
    {{ knp_menu_render('menu.main', {'currentClass':'active', 'template': 'YdleHubBundle:Menu:knp_menu.html.twig'}) }}
    {% endif %}
</section>
</aside>
{% endblock %}
    
{% block body %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>Control panel</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Dashboard</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            {% block content %}
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-lg-3 col-xs-6">
                        <!-- small box -->
                        <div class="small-box bg-aqua">
                            <div class="inner">
                                <h3>
                                    150
                                </h3>

                                <p>
                                    New Orders
                                </p>
                            </div>
                            <div class="icon">
                                <i class="ion ion-bag"></i>
                            </div>
                            <a href="#" class="small-box-footer">
                                More info <i class="fa fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- ./col -->
            {% endblock %}
        </section>
    </aside>

    {% if code is defined %}
        <h2>Code behind this page</h2>
        <div class="block">
            <div class="symfony-content">{{ code|raw }}</div>
        </div>
    {% endif %}

    {% block javascripts %}
        {% javascripts
            '@YdleHubBundle/Resources/public/js/jquery.min.js'
            '@YdleHubBundle/Resources/public/js/jquery.ui.min.js'
            '@YdleHubBundle/Resources/public/js/bootstrap.min.js'
            '@YdleHubBundle/Resources/public/js/AdminLTE/app.js'
            '@YdleHubBundle/Resources/public/js/twig.min.js'
            '@YdleHubBundle/Resources/public/js/icheck.min.js'
            '@YdleHubBundle/Resources/public/js/jquery.form.js'
            '@YdleHubBundle/Resources/public/js/dashboard.js'
	    '@YdleHubBundle/Resources/public/js/jquery.flot.js'
	    '@YdleHubBundle/Resources/public/js/jquery.flot.time.js'
            '@YdleHubBundle/Resources/public/js/ydle.js'
            output="js/main.js"
        %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}

    {% endblock %}
{% endblock %}
